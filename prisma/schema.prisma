generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String         @id @default(uuid())
  name         String?
  username     String         @unique
  phone        String?
  email        String?
  profile      Profile?
  otp          Otp?
  blogs        Blog[]
  likeBlog     like_blog?
  bookmarkBlog bookmark_blog?
  blogComments BlogComment[]

  @@unique([email, phone, username])
}

model Otp {
  id        String   @id @default(cuid())
  code      String
  expiresIn DateTime
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Profile {
  id                   String    @id @default(uuid())
  bio                  String?
  avatar               String?
  bg_image             String?
  gender               String?
  birthday             DateTime?
  linkedin_profile_url String?
  userId               String    @unique
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id       String @id @default(uuid())
  title    String
  priority Int?

  blogs BlogCategory[]
}

model Blog {
  id            String          @id @default(uuid())
  title         String
  slug          String          @unique
  description   String
  content       String
  image         String
  status        String          @default("draft")
  created_at    DateTime        @default(now())
  updated_at    DateTime        @updatedAt
  authorId      String
  author        User            @relation(fields: [authorId], references: [id], onDelete: Cascade)
  likeBlogs     like_blog[]
  bookmarkBlogs bookmark_blog[]
  categories    BlogCategory[]
  blogComments  BlogComment[]
}

model BlogCategory {
  blogId     String
  categoryId String

  blog     Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([blogId, categoryId])
}

model like_blog {
  id     String @id @default(uuid())
  blogId String @unique
  blog   Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade)
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model bookmark_blog {
  id     String @id @default(uuid())
  blogId String @unique
  blog   Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade)
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BlogComment {
  id         String   @id @default(uuid())
  text       String
  accepted   Boolean  @default(false)
  created_at DateTime @default(now())

  blogId String
  blog   Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  parentId String?
  parent   BlogComment?  @relation("CommentTree", fields: [parentId], references: [id], onDelete: SetNull)
  children BlogComment[] @relation("CommentTree")

  @@index([blogId])
  @@index([parentId])
}
